
// --- EvalBoxModule extends BoxModule

function EvalBoxModule(suffix, inputBoxComponent) {
    BoxModule.call(this, suffix, inputBoxComponent);

    this.BTN_EVAL = 'btn-eval_' + suffix;
}

EvalBoxModule.prototype = new BoxModule();

EvalBoxModule.prototype.render = function() {
    return `
        <div class="eval-box">
          <a id="${this.BTN_EVAL}" class="btn btn-block btn-default" href="#/">Eval</a>
          <span>(ctrl+space)</span>
        </div>
    `;
};

EvalBoxModule.prototype.init = function() {
    var input = this.inputBoxComponent;
    $('#' + this.BTN_EVAL).on('click', function() {
        input.inputManager.eval([ input ]);
    });
};




// css
.eval-box {
    text-align: center;
}








// --- DivBoxModule extends EnclosingBoxModule

function DivBoxModule(suffix, inputBoxComponent, cssClass, module) {
    EnclosingBoxModule.call(this, suffix, inputBoxComponent, module);

    this.cssClass = cssClass;
}

DivBoxModule.prototype = new EnclosingBoxModule();

DivBoxModule.prototype.render = function() {
    var content = this.module.render();

    return `
        <div class="${this.cssClass}">
          ${content}
        </div>
    `;
};